@model List<EstudiantesViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<h4 class="text-center my-4">Lista de Estudiantes</h4>
<div class="row">
    <div class="col-12">
        <table class="table table-hover tabla-estudiantes">
            <thead>
                <tr>
                    <th class="col-nombre">Nombre Completo</th>
                    <th class="col-matricula">Matrícula</th>
                    <th>Carrera</th>
                    <th class="col-correo">Correo Institucional</th>
                    <th>Teléfono</th>
                    <th class="col-nacimiento">Nacimiento</th>
                    <th>Género</th>
                    <th>Turno</th>
                    <th>Ingreso</th>
                    <th>Beca</th>
                    <th>% Beca</th>
                    <th>Términos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model)
                {
                    <tr>
                        <td>@it.NombreCompleto</td>
                        <td>@it.Matricula</td>
                        <td>@it.Carrera</td>
                        <td>@it.CorreoInstitucional</td>
                        <td>@it.Telefono</td>
                        <td>@it.FechaDeNacimiento?.ToString("dd/MM/yyyy")</td>
                        <td>@it.Genero</td>
                        <td>@it.Turno</td>
                        <td>@it.TipoDeIngreso</td>
                        <td>@(it.EstaBecado ? "Sí" : "No")</td>
                        <td>@it.PorcentajeDeBeca</td>
                        <td>@(it.TerminosYCondiciones ? "Sí" : "No")</td>
                        <td>
                            <a href="/Estudiantes/Editar/@it.Matricula" class="btn btn-secondary">Editar</a>
                            <a href="/Estudiantes/Eliminar/@it.Matricula" class="btn btn-danger"
                               onclick="return confirm('¿Estás seguro de que deseas eliminar este estudiante?');">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>